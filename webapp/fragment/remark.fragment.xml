<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:semantic="sap.m.semantic" xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Dialog id="fld_comnComnts"
      title ="Add Remarks" contentWidth="30%"  draggable="true" resizable="false">
          <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="12"
            labelSpanL="12"
            labelSpanM="12"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
            class="formNoTitle"
        >
            <f:content>
                <TextArea
                    value="{display>/results/Comments}"
                    maxLength="199"
                />
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button  text="OK" press="onComments" />
             <Button  text="Close" press="onCloseComments" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>